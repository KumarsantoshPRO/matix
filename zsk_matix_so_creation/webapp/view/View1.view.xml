<mvc:View
    controllerName="zpro.sk.matix.so.creation.zskmatixsocreation.controller.View1"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:plugins="sap.m.plugins"
    xmlns:columnmenu="sap.m.table.columnmenu"
    xmlns:sap.ui.fl="sap.ui.fl"
    xmlns:sap.ui.dt="sap.ui.dt"
    xmlns:vm="sap.ui.fl.variants"
    xmlns:dnd="sap.ui.core.dnd"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:u="sap.ui.unified"
    xmlns:form="sap.ui.layout.form"
    xmlns:uxap="sap.uxap"
>
    <Page>
        <VBox class="sapUiSmallMargin">
            <f:SimpleForm
                editable="true"
                title="Create Sales Order"
                layout="ResponsiveGridLayout"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                columnsXL="1"
                columnsL="1"
                singleContainerFullSize="false"
            >
                <f:content>
                    <Label text="SO Document Type" />
                    <Input
                        placeholder="SO Document Type"
                        showValueHelp="true"
                        width="15rem"
                    />

                    <Label text="Sales Organisation" />
                    <Input
                        value="1000-Matix Sales Group"
                        editable="false"
                        placeholder="Sales Organisation"
                        showValueHelp="true"
                        width="15rem"
                    />

                    <Label text="Distribution Channel" />
                    <Input
                        value="10-Dealers"
                        placeholder="Distribution Channel"
                        showValueHelp="true"
                        width="15rem"
                    />

                    <Label text="Division" />
                    <Input
                        value="10-Fertilisers"
                        placeholder="Division"
                        showValueHelp="true"
                        width="15rem"
                    />
                    <Label
                        text="Material Group "
                        textAlign="Initial"
                    />
                    <Select width="15rem">
                        <core:Item
                            key="90-Final Product"
                            text="90-Final Product"
                        />
                    </Select>
                </f:content>
            </f:SimpleForm>

            <Bar>
                <contentLeft>
                    <Button
                        text="Reset"
                        type="Reject"
                        icon="sap-icon://reset"
                    />
                    <Button
                        text="Next"
                        type="Emphasized"
                        press="onNextButtonPress"
                        icon="sap-icon://initiative"
                    />
                </contentLeft>
            </Bar>
        </VBox>
    </Page>
</mvc:View>
