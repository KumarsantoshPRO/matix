<mvc:View
    controllerName="matix.com.rep.debtors.debtors.controller.View"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <f:DynamicPage headerExpanded="true">
        <f:header>
            <f:DynamicPageHeader pinnable="false">
                <f:content>
                    <form:SimpleForm
                        editable="true"
                        title="Debtors Outstanding with aging"
                        layout="ResponsiveGridLayout"
                        columnsL="2"
                        columnsM="2"
                        columnsXL="2"
                    >
                        <form:content>
                            <Label text="Sold To Party" />
                            <Input
                                placeholder="Sold To Party"
                                width="15rem"
                                value="{oModelForFilters>/CustomerNumber}"
                                showSuggestion="true"
                                suggest=".onSuggest"
                                suggestionItems="{oModelForSoldTopart>/}"
                            >
                                <suggestionItems>
                                    <core:Item text="{oModelForSoldTopart>DomvalueL}-{oModelForSoldTopart>Ddtext}"/>
                                </suggestionItems>
                            </Input>

                            <Label text="District " />
                            <Input
                                placeholder="District"
                                showValueHelp="true"
                                width="15rem"
                            />

                            <Label text="Date " />
                            <DatePicker
                                placeholder="mm/dd/yyyy"
                                width="15rem"
                                value="{path:'oModelForFilters>/Keydate', type: 'sap.ui.model.type.Date', formatOptions: {UTC: true}}"
                            />
                        </form:content>
                    </form:SimpleForm>
                </f:content>
                <HBox justifyContent="SpaceBetween">
                    <HBox>
                        <Button
                            text="View Report"
                            type="Emphasized"
                            press="onNextButtonPress"
                            class="sapUiSmallMarginEnd"
                        />
                        <Button
                            text="Reset"
                            type="Reject"
                            press="onResetButtonPress"
                        />
                    </HBox>
                </HBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Table
                    id="table"
                    inset="false"
                    items="{
						path: 'oModelForTable>/'
					}"
                >
                    <headerToolbar>
                        <OverflowToolbar
                            design="Transparent"
                            width="100%"
                        >
                            <content>
                                <Title
                                    text="List of Debtors Outstanding"
                                    level="H2"
                                />

                                <ToolbarSpacer />
                                <Button
                                    icon="sap-icon://download"
                                    press="onExport"
                                />
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text text="Customer Number" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text text="Customer Name" />
                        </Column>

                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text text="District" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text text="Credit Limit" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text text="Validity Till" />
                        </Column>
                        <Column
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text text="Outstanding Amount" />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <Text text="{oModelForTable>CustomerNumber}" />
                                <Text text="{oModelForTable>CustomerName}" />
                                <Text
                                    text="{oModelForTable>DistrictCode}-{oModelForTable>DistrictName}"
                                />
                                <Text text="{oModelForTable>CreditLimit}" />
                                <Text text="{oModelForTable>ValidTill}" />
                                <Text text="{oModelForTable>Balance}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <MessageStrip
                    id="myMessageStrip"
                    text="BENGAL TEAM TO DEDUCT THE SECURITY AMOUNT OF PESTICIDES FROM THE SHOWN OUSTANDING AMOUNT"
                    type="Error"
                    visible="false"
                />
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>
