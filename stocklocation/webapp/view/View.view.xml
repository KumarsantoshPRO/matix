<mvc:View
    controllerName="matix.com.sp.stocklocation.stocklocation.controller.View"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:form="sap.ui.layout.form"
>
    <f:DynamicPage headerExpanded="true">
        <f:header>
            <f:DynamicPageHeader pinnable="false">
                <f:content>
                    <form:SimpleForm
                        editable="true"
                        title="Stock at Different Locations"
                        layout="ResponsiveGridLayout"
                    >
                        <form:content>
                            <Label text="Plant" />
                            <Input
                                placeholder="Plant"
                                showValueHelp="true"
                                width="15rem"
                            />

                            <Label text="Material" />
                            <Input
                                placeholder="Material"
                                showValueHelp="true"
                                width="15rem"
                            />
                            <Label />
                            <HBox justifyContent="SpaceBetween">
                                <HBox>
                                    <Button
                                        text="View Stock"
                                        type="Emphasized"
                                        press="onNextButtonPress"
                                        icon="sap-icon://initiative"
                                    />
                                    <Button
                                        text="Reset"
                                        type="Reject"
                                        icon="sap-icon://reset"
                                    />
                                </HBox>
                                <ObjectStatus
                                    class="sapMObjectStatusLarge"
                                    title="Total Stock"
                                    text="15002"
                                    state="None"
                                />
                            </HBox>
                        </form:content>
                    </form:SimpleForm>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="table"
                inset="false"
                items="{
						path: '/ProductCollection'
					}"
            >
                <columns>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Material" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Quantity (MT)" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Plant" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Location Code" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <ObjectIdentifier
                                title="{Name}"
                                text="{ProductId}"
                            />
                            <Text text="{Category}" />
                            <Text text="{SupplierName}" />
                            <Text text="{SupplierName}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
