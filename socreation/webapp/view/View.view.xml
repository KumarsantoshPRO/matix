<mvc:View
    controllerName="matix.com.sp.socreation.socreation.controller.View"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:plugins="sap.m.plugins"
    xmlns:columnmenu="sap.m.table.columnmenu"
    xmlns:sap.ui.fl="sap.ui.fl"
    xmlns:sap.ui.dt="sap.ui.dt"
    xmlns:vm="sap.ui.fl.variants"
    xmlns:dnd="sap.ui.core.dnd"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:u="sap.ui.unified"
    xmlns:form="sap.ui.layout.form"
    xmlns:uxap="sap.uxap"
>
    <uxap:ObjectPageLayout
        id="ObjectPageLayout"
        upperCaseAnchorBar="true"
        showFooter="true"
        headerContentPinnable="true"
    >
        <uxap:headerContent>
            <fb:FilterBar
                id="filterbar"
                persistencyKey="myPersKey"
                useToolbar="true"
                showGoOnFB="false"
                showFilterConfiguration="true"
                filterContainerWidth="30rem"
                showRestoreButton="true"
                showAllFilters="true"
                
               
            >
          
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        name="Name"
                        label="SO Document Type"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                value=""
                                placeholder="SO Document Type"
                                showValueHelp="true"
                                width="15rem"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        name="Name1"
                        label="Sales Organisation"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                value=""
                                placeholder="Sales Organisation"
                                showValueHelp="true"
                                width="15rem"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        name="Name2"
                        label="Distribution Channel"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                value=""
                                placeholder="Distribution Channel"
                                showValueHelp="true"
                                width="15rem"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        name="Name3"
                        label="Division "
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                value=""
                                placeholder="Division"
                                showValueHelp="true"
                                width="15rem"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        name="Name4"
                        label="Material Group"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Select />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="Name5"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                         <FlexBox direction="Row" justifyContent="End"> 
                                <Button
                                    text="Next"
                                    width="10rem"
                                    type="Emphasized"
                                    class="sapUiTinyMarginEnd"
                                />
                                <Button
                                    text="Reset"
                                    width="10rem"
                                />
                            </FlexBox> 
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </uxap:headerContent>

        <uxap:sections>
            <uxap:ObjectPageSection title="Sales Order">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        id="idV2OPSubGenInfo"
                        title="{i18nV2>view2.sections.generalInfo.title}"
                        titleUppercase="true"
                    >
                        <uxap:blocks>
                            <form:SimpleForm
                                editable="true"
                                layout="ColumnLayout"
                            >
                                <form:content>
                                    <Label text="Sold-to-party" />
                                    <Input />

                                    <Label text="Payment Terms" />
                                    <Input />

                                    <Label text="Doc Date" />
                                    <Input />

                                    <Label text="Truck No" />
                                    <Input />
                                    <Label text="Transporter Code " />
                                    <Input />

                                    <Label text="Ship-to-party " />
                                    <Input />
                                    <Label text="Inco Terms" />
                                    <Input />
                                    <Label text="LR No " />
                                    <Input />
                                    <Label text="Truck Capacilty" />
                                    <Input />
                                </form:content>
                            </form:SimpleForm>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                id="idV2OPSPrdDetail"
                titleUppercase="true"
                title="List of Products"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        id="idV2OPSubPrdDetail"
                        title="List of Products"
                        titleUppercase="true"
                    >
                        <uxap:blocks>
                            <Table
                                id="SOTable"
                                items="{path: 'oModelForTable>/'}"
                                ariaLabelledBy="title"
                                fixedLayout="Strict"
                                autoPopinMode="true"
                                growing="true"
                                sticky="ColumnHeaders,HeaderToolbar"
                                popinLayout="GridSmall"
                                mode="Delete"
                                delete="onItemsTableDelete"
                                backgroundDesign="Solid"
                                alternateRowColors="true"
                            >
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <Title
                                            id="title"
                                            text="List of Products"
                                        />
                                        <Button
                                            icon="sap-icon://action-settings"
                                            press="openPersoDialog"
                                            tooltip="Settings"
                                            visible="{myProperties>/view}"
                                        />
                                        <ToolbarSeparator visible="false" />
                                        <vm:VariantManagement
                                            id="p13nVm"
                                            for="SIONTable"
                                            visible="false"
                                        />
                                        <ToolbarSpacer />

                                        <Button
                                            icon="sap-icon://add-product"
                                            press="onAddNewItemPress"
                                            tooltip="Add New Item"
                                            type="Emphasized"
                                        />
                                    </OverflowToolbar>
                                </headerToolbar>

                                <dependents>
                                    <plugins:ColumnResizer
                                        columnResize="onColumnResize"
                                    />
                                    <columnmenu:Menu
                                        id="menu"
                                        beforeOpen="beforeOpenColumnMenu"
                                    >
                                        <columnmenu:QuickSort change="onSort">
                                            <columnmenu:items>
                                                <columnmenu:QuickSortItem />
                                            </columnmenu:items>
                                        </columnmenu:QuickSort>
                                        <columnmenu:QuickGroup change="onGroup">
                                            <columnmenu:items>
                                                <columnmenu:QuickGroupItem />
                                            </columnmenu:items>
                                        </columnmenu:QuickGroup>
                                        <columnmenu:items>
                                            <columnmenu:ActionItem
                                                icon="sap-icon://sort"
                                                label="Sort"
                                                press="onColumnHeaderItemPress"
                                            />
                                            <columnmenu:ActionItem
                                                icon="sap-icon://group-2"
                                                label="Group"
                                                press="onColumnHeaderItemPress"
                                            />
                                            <columnmenu:ActionItem
                                                icon="sap-icon://filter"
                                                label="Filter"
                                                press="onColumnHeaderItemPress"
                                            />
                                            <columnmenu:ActionItem
                                                icon="sap-icon://table-column"
                                                label="Columns"
                                                press="onColumnHeaderItemPress"
                                            />
                                        </columnmenu:items>
                                    </columnmenu:Menu>
                                </dependents>

                                <dragDropConfig>
                                    <dnd:DragDropInfo
                                        sourceAggregation="columns"
                                        targetAggregation="columns"
                                        dropPosition="Between"
                                        drop="onColumnMove"
                                    />
                                </dragDropConfig>

                                <noData>
                                    <IllustratedMessage />
                                </noData>

                                <columns>
                                    <Column headerMenu="menu">
                                        <header>
                                            <Text text="Material" />
                                        </header>
                                    </Column>
                                    <Column headerMenu="menu">
                                        <header>
                                            <Text
                                                text="Material Description "
                                            />
                                        </header>
                                    </Column>

                                    <Column
                                        app:p13nKey="HsnCode"
                                        headerMenu="menu"
                                    >
                                        <Text text="Quantity" />
                                    </Column>
                                    <Column
                                        app:p13nKey="SionNo"
                                        headerMenu="menu"
                                    >
                                        <Text text="Unit" />
                                    </Column>
                                    <Column
                                        app:p13nKey="Plant"
                                        headerMenu="menu"
                                    >
                                        <Text text="Plant" />
                                    </Column>
                                    <Column
                                        app:p13nKey="Plant"
                                        headerMenu="menu"
                                    >
                                        <Text text="Storage Location" />
                                    </Column>
                                    <Column
                                        app:p13nKey="Plant"
                                        headerMenu="menu"
                                    >
                                        <Text text="Contract" />
                                    </Column>
                                    <Column
                                        app:p13nKey="Plant"
                                        headerMenu="menu"
                                    >
                                        <Text text="Batch No" />
                                    </Column>
                                </columns>

                                <items>
                                    <ColumnListItem>
                                        <Text text="{MaterialNumber}" />
                                        <Text />
                                        <Text />
                                        <Text />
                                        <Text />
                                        <Text />
                                        <Text />
                                        <Text />
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
        <!-- <FlexBox  alignContent="Center" alignItems="Center" justifyContent="SpaceAround" class="sapUiLargeMarginTop">
          
                <f:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
              width="60rem"
              title="SO Creation"
                >
                    <f:content>
                        <Label text="SO Document Type" />
                        <Input />

                        <Label text="Sales Organisation" />
                        <Input />
                        <Label text="Distribution Channel" />
                        <Input />

                        <Label text="Division" />
                        <Input />
                        <Label text="Material Group " />
                        <Input />
                        <Label />
                        <Button
                            text="Reset"
                            type="Emphasized"
                        />
                        <Button
                            text="Next"
                            type="Emphasized"
                            press="onNextButtonPress"
                        />
                    </f:content>
                </f:SimpleForm>
           
        </FlexBox> -->
        <uxap:footer>
            <OverflowToolbar visible="{myProperties>/footer}">
                <ToolbarSpacer />
                <Button
                    text="Auto Invoice for SO"
                    press=""
                    type="Emphasized"
                />
                <Button
                    text="Updtae Contract value"
                    press=""
                    type="Emphasized"
                />
                <Button
                    text="Condition"
                    press=""
                    type="Emphasized"
                />
                <Button
                    text="Reset"
                    press=""
                    type="Reject"
                />
                <Button
                    text="Submit"
                    press=""
                    type="Accept"
                />
            </OverflowToolbar>
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>
