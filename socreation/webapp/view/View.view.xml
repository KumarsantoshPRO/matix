<mvc:View
    controllerName="matix.com.sp.socreation.socreation.controller.View"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Page>
        <FlexBox
            alignItems="Center"
            justifyContent="Center"
            class="sapUiLargeMarginTop"
        >
            <f:SimpleForm
                editable="true"
                title="Create Sales Order"
                layout="ResponsiveGridLayout"
            >
                <f:content>
                    <Label text="SO Document Type" />
                    <Input
                        placeholder="SO Document Type"
                        showValueHelp="true"
                    />

                    <Label text="Sales Organisation" />
                    <Input
                        value="1000-Matix Sales Group"
                        editable="false"
                        placeholder="Sales Organisation"
                        showValueHelp="true"
                    />

                    <Label text="Distribution Channel" />
                    <Input
                        value="10-Dealers"
                        placeholder="Distribution Channel"
                        showValueHelp="true"
                    />

                    <Label text="Division" />
                    <Input
                        value="10-Fertilisers"
                        placeholder="Division"
                        showValueHelp="true"
                    />
                    <Label
                        text="Material Group "
                        textAlign="Initial"
                    />
                    <Select>
                        <core:Item
                            key="90-Final Product"
                            text="90-Final Product"
                        />
                    </Select>
                    <Label />
                    <Button
                        text="Reset"
                        type="Reject"
                        icon="sap-icon://reset"
                    />
                    <Button
                        text="Next"
                        type="Emphasized"
                        press="onNextButtonPress"
                        icon="sap-icon://initiative"
                    />
                </f:content>
            </f:SimpleForm>
            <!-- <Bar>
                    <contentLeft>
                        <Button
                            text="Reset"
                            type="Reject"
                            icon="sap-icon://reset"
                        />
                        <Button
                            text="Next"
                            type="Emphasized"
                            press="onNextButtonPress"
                            icon="sap-icon://initiative"
                        />
                    </contentLeft>
                </Bar> -->
        </FlexBox>
    </Page>
</mvc:View>
